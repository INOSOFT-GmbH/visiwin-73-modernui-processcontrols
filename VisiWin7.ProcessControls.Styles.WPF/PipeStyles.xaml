<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pc="http://inosoft.com/ProcessControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/VisiWin7.ProcessControls.Styles.WPF;component/ProcessControlStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--ThinPipe-Style-->
    <Style TargetType="pc:Pipe" BasedOn="{StaticResource {x:Type pc:DefaultProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stroke="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stretch="Fill"
                          StrokeStartLineCap="Square"
                          StrokeEndLineCap="Square">
                        <Path.Data>
                            <PathGeometry Figures="m 0,0 l 0,100"/>
                        </Path.Data>
                    </Path>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThinPipeBridge-Style-->
    <Style TargetType="pc:PipeBridge" BasedOn="{StaticResource {x:Type pc:DefaultProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <!--<Viewbox>-->
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stroke="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stretch="Uniform">
                        <Path.Data>
                            <PathGeometry Figures="m 0,50 a 50,50 180 1 1 100,0"/>
                        </Path.Data>
                    </Path>
                <!--</Viewbox>-->
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThinPipeConnection-Style-->
    <Style TargetType="pc:PipeConnection" BasedOn="{StaticResource {x:Type pc:DefaultProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stretch="Fill">
                        <Path.Data>
                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                        </Path.Data>
                    </Path>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--Arrow-Style-->
    <Style TargetType="pc:Arrow" BasedOn="{StaticResource {x:Type pc:DefaultProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox>
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stroke="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Fill="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:DefaultProcessControlBase}}}"
                          Stretch="Fill">
                        <Path.Data>
                            <PathGeometry Figures="m 20,0 l 20,20 l -40,0 z"/>
                        </Path.Data>
                    </Path>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

</ResourceDictionary>