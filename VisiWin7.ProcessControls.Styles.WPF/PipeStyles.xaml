<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pc="http://inosoft.com/ProcessControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/VisiWin7.ProcessControls.Styles.WPF;component/ProcessControlStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--ThinPipe-Style-->
    <Style TargetType="pc:ThinPipe" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stroke="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stretch="Fill"
                          StrokeStartLineCap="Square"
                          StrokeEndLineCap="Square">
                        <Path.Data>
                            <PathGeometry Figures="m 0,0 l 0,100"/>
                        </Path.Data>
                    </Path>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThinPipeBridge-Style-->
    <Style TargetType="pc:ThinPipeBridge" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <!--<Viewbox>-->
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stroke="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stretch="Uniform">
                        <Path.Data>
                            <PathGeometry Figures="m 0,50 a 50,50 180 1 1 100,0"/>
                        </Path.Data>
                    </Path>
                <!--</Viewbox>-->
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThinPipeConnection-Style-->
    <Style TargetType="pc:ThinPipeConnection" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stretch="Fill">
                        <Path.Data>
                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                        </Path.Data>
                    </Path>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--Arrow-Style-->
    <Style TargetType="pc:Arrow" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox>
                    <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stroke="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Fill="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}}"
                          Stretch="Fill">
                        <Path.Data>
                            <PathGeometry Figures="m 20,0 l 20,20 l -40,0 z"/>
                        </Path.Data>
                    </Path>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThickPipe-Style-->
    <Style TargetType="pc:ThickPipe" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Grid>
                        <!--Fill-->
                        <Path Fill="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource ProcessControlForegroundBrush}}"
                              Stretch="Fill">
                            <Path.Data>
                                <PathGeometry Figures="m 0,0 l 10,0 l 0,10 l -10,0 z"/>
                            </Path.Data>
                        </Path>

                        <!--Stroke-->
                        <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource StrokeThicknessFallback}}"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource ProcessControlStrokeBrush}}"
                              Stretch="Fill"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square">
                            <Path.Data>
                                <PathGeometry Figures="m 0,0 l 0,100 m 100,0 l 0,-100"/>
                            </Path.Data>
                        </Path>
                    </Grid>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThickPipeCorner-Style-->
    <Style TargetType="pc:ThickPipeCorner" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Grid>
                        <!--Fill-->
                        <Path Fill="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource ProcessControlForegroundBrush}}"
                              Stretch="Fill">
                            <Path.Data>
                                <PathGeometry Figures="m 0,0 l 10,0 l 0,10 l -10,0 z"/>
                            </Path.Data>
                        </Path>

                        <!--Stroke-->
                        <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource StrokeThicknessFallback}}"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource ProcessControlStrokeBrush}}"
                              Stretch="Fill"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square">
                            <Path.Data>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,0" EndPoint="100,0"/>
                                    <LineGeometry StartPoint="100,0" EndPoint="100,100"/>
                                    <LineGeometry StartPoint="0,100" EndPoint="0,100"/>
                                </GeometryGroup>
                            </Path.Data>
                        </Path>
                    </Grid>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

    <!--ThickPipeThreeWay-Style-->
    <Style TargetType="pc:ThickPipeThreeWay" BasedOn="{StaticResource {x:Type pc:ProcessControlBase}}">
        <Setter Property="Padding" Value="0"/>
        <Style.Resources>
            <DataTemplate x:Key="StyleTemplate">
                <Viewbox Stretch="Fill">
                    <Grid>
                        <!--Fill-->
                        <Path Fill="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource ProcessControlForegroundBrush}}"
                              Stretch="Fill">
                            <Path.Data>
                                <PathGeometry Figures="m 0,0 l 10,0 l 0,10 l -10,0 z"/>
                            </Path.Data>
                        </Path>

                        <!--Stroke-->
                        <Path StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource StrokeThicknessFallback}}"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type pc:ProcessControlBase}}, FallbackValue={StaticResource ProcessControlStrokeBrush}}"
                              Stretch="Fill"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square">
                            <Path.Data>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,0" EndPoint="100,0"/>
                                    <LineGeometry StartPoint="100,100" EndPoint="100,100"/>
                                    <LineGeometry StartPoint="0,100" EndPoint="0,100"/>
                                </GeometryGroup>
                            </Path.Data>
                        </Path>
                    </Grid>
                </Viewbox>
            </DataTemplate>
        </Style.Resources>
    </Style>

</ResourceDictionary>