            </ResourceDictionary.MergedDictionaries>
            <vw:ApplicationManager x:Key="ApplicationManager" ProjectName="VisiWin7.ProcessControls.Development.WPF" SplashWindowEnabled="True" UseTouchkeyboard="True"/>
            <system:Double x:Key="ControlHeight">125</system:Double>
            <system:Double x:Key="ControlWidth">350</system:Double>
