<vw:View x:Class="HMI.EngineControlDialogView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:vw="http://inosoft.com/visiwin7"
         mc:Ignorable="d"         
         MinWidth="380" MinHeight="140"
         Background="{DynamicResource ApplicationBackgroundBrush}">

    <Grid x:Name="LayoutRoot">

        <StackPanel Orientation="Vertical" Margin="10">

            <vw:Switch LocalizableLabelText="{Binding Path=[ActualValue].LocalizableLabelText, UpdateSourceTrigger=PropertyChanged}"
                       IsChecked="{Binding Path=[ActualValue].PropertyValue, Mode=TwoWay}"
                       Margin="0,0,0,10" />

            <vw:NumericVarIn
                LocalizableLabelText="{Binding Path=[Errors].LocalizableLabelText, UpdateSourceTrigger=PropertyChanged}"
                RawValue="{Binding Path=[Errors].PropertyValue, Mode=TwoWay}"
                Margin="0,0,0,10" />

        </StackPanel>

    </Grid>

</vw:View>