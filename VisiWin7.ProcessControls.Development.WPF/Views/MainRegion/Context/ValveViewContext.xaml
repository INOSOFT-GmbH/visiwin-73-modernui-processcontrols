<vw:View x:Class="HMI.ValveViewContext"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:vw="http://inosoft.com/visiwin7"
         xmlns:adapter="clr-namespace:HMI.Adapter"
         mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="{DynamicResource ApplicationBackgroundBrush}" Margin="10">

        <StackPanel Orientation="Vertical">

            <vw:GroupBox Header="@Views.ProcessControls.ValveVariableSettings" Foreground="{DynamicResource ForegroundDarkBrush}"
                      FontSize="{DynamicResource FontSize_Subheader}"
                      FontWeight="SemiBold">

                <vw:GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource Blue4Brush}"
                                CornerRadius="3"
                                Padding="10,5">
                            <vw:TextBlock LocalizableText="{Binding}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Blue5Brush}" />
                        </Border>
                    </DataTemplate>
                </vw:GroupBox.HeaderTemplate>

                <Border Background="{DynamicResource Gray4Brush}"
                        CornerRadius="{DynamicResource CornerRadius}">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <vw:Switch x:Name="Switch" LabelText="FrameTemplate active" HorizontalAlignment="Left"
                                   Margin="10"
                                   DataContext="{vw:AdapterBinding Type={x:Type adapter:ProcessControlAdapter}}"
                                   IsChecked="{Binding IsFrameTemplateActive, Mode=TwoWay}" />

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">

                            <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                   VariableName="ValveOne{.ActualValue}"
                                                   Margin="10" />

                            <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                   VariableName="ValveOne{.SetValue}"
                                                   Margin="10" />

                            <vw:UpDownNumericVarIn UseVariableText="True" Width="300" VariableName="ValveOne{.Errors}"
                                                   Margin="10" />

                        </StackPanel>

                    </Grid>

                </Border>

            </vw:GroupBox>

            <vw:GroupBox Header="@Views.ProcessControls.ThreeWayValveVariableSettings" Foreground="{DynamicResource ForegroundDarkBrush}"
                      FontSize="{DynamicResource FontSize_Subheader}"
                      FontWeight="SemiBold"
                      Margin="0,10,0,0">

                <vw:GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource Blue4Brush}"
                                CornerRadius="3"
                                Padding="10,5">
                            <vw:TextBlock LocalizableText="{Binding}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Blue5Brush}" />
                        </Border>
                    </DataTemplate>
                </vw:GroupBox.HeaderTemplate>

                <Border Background="{DynamicResource Gray4Brush}"
                        CornerRadius="{DynamicResource CornerRadius}">

                    <Grid>

                        <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                               VariableName="ThreeWayValveOne{.Errors}"
                                               Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                        <StackPanel HorizontalAlignment="Right" Orientation="Vertical">

                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                                <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                       VariableName="ThreeWayValveOne{.ActualValuePortA}"
                                                       Margin="10" />

                                <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                       VariableName="ThreeWayValveOne{.ActualValuePortB}"
                                                       Margin="10" />

                                <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                       VariableName="ThreeWayValveOne{.ActualValuePortC}"
                                                       Margin="10" />

                            </StackPanel>

                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                                <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                       VariableName="ThreeWayValveOne{.SetValuePortA}"
                                                       Margin="10" />

                                <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                       VariableName="ThreeWayValveOne{.SetValuePortB}"
                                                       Margin="10" />

                                <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                                       VariableName="ThreeWayValveOne{.SetValuePortC}"
                                                       Margin="10" />


                            </StackPanel>

                        </StackPanel>

                    </Grid>

				</Border>

            </vw:GroupBox>

        </StackPanel>

    </Grid>

</vw:View>