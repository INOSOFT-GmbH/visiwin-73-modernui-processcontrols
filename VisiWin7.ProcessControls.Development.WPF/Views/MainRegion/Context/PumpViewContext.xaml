<vw:View x:Class="HMI.PumpViewContext"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:vw="http://inosoft.com/visiwin7"
         xmlns:adapter="clr-namespace:HMI.Adapter"
         mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="{DynamicResource ApplicationBackgroundBrush}" Margin="10">

        <vw:GroupBox Header="@Views.ProcessControls.PumpVariableSettings" Foreground="{DynamicResource ForegroundDarkBrush}"
                  FontSize="{DynamicResource FontSize_Subheader}"
                  FontWeight="SemiBold">

            <vw:GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource Blue4Brush}"
                            CornerRadius="3"
                            Padding="10,5">
                        <vw:TextBlock LocalizableText="{Binding}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Blue5Brush}" />
                    </Border>
                </DataTemplate>
            </vw:GroupBox.HeaderTemplate>

            <Border Background="{DynamicResource Gray4Brush}"
                    CornerRadius="{DynamicResource CornerRadius}">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <vw:Switch x:Name="Switch" LocalizableText="@Views.ProcessControls.FrameTemplateActive" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Bottom"
                               DataContext="{vw:AdapterBinding Type={x:Type adapter:ProcessControlAdapter}}"
                               IsChecked="{Binding IsFrameTemplateActive, Mode=TwoWay}" />

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">

                        <vw:UpDownNumericVarIn UseVariableText="True" Width="300"
                                               VariableName="PumpOne{.ActualValue}"
                                               Margin="10" />

                        <vw:UpDownNumericVarIn UseVariableText="True" Width="300" VariableName="PumpOne{.SetValue}"
                                               Margin="10" />

                        <vw:UpDownNumericVarIn UseVariableText="True" Width="300" VariableName="PumpOne{.Errors}"
                                               Margin="10" />

                    </StackPanel>

                </Grid>

            </Border>

        </vw:GroupBox>

    </Grid>

</vw:View>