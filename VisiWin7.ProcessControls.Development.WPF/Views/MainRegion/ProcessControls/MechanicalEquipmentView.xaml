<vw:View x:Class="HMI.MechanicalEquipmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vw="http://inosoft.com/visiwin7"
    xmlns:pc="http://inosoft.com/ProcessControls"
    xmlns:adapter="clr-namespace:HMI.Adapter"
    mc:Ignorable="d"
    DataContext="{vw:AdapterBinding Type={x:Type adapter:ProcessControlAdapter}}"
    d:DesignWidth="1024" d:DesignHeight="588">

    <vw:View.Resources>

        <Style TargetType="pc:RotaryFeeder" BasedOn="{StaticResource {x:Type pc:RotaryFeeder}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:Diverter" BasedOn="{StaticResource {x:Type pc:Diverter}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:Stirer" BasedOn="{StaticResource {x:Type pc:Stirer}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:Centrifugal" BasedOn="{StaticResource {x:Type pc:Centrifugal}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:Scale" BasedOn="{StaticResource {x:Type pc:Scale}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </vw:View.Resources>

    <Grid x:Name="LayoutRoot" Background="{DynamicResource ApplicationBackgroundBrush}">

        <vw:ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10"
                         Style="{StaticResource ScrollViewerDefaultStyle}">

            <StackPanel Orientation="Vertical">

                <GroupBox Header="Mechanical Equipment Types"
                          FontSize="{DynamicResource FontSize_Subheader}"
                          FontWeight="SemiBold"
                          Margin="0,0,0,30">

                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Blue4Brush}"
                                    CornerRadius="3"
                                    Padding="10,5">
                                <TextBlock Text="{Binding}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource Blue5Brush}" />
                            </Border>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>

                    <Border Background="{DynamicResource Gray4Brush}"
                            CornerRadius="{DynamicResource CornerRadius}"
                            Padding="0">
                        <UniformGrid Rows="2" Columns="3">

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="Rotary Feeder"
                                               FontSize="{DynamicResource FontSize_Label}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10" />
                                    <pc:RotaryFeeder Width="150" Height="80" 
                                                     StructVariableName="MechanicalEquipmentOne" 
                                                     StateBrushes="{StaticResource ProcessControlStates}"
                                                     Mapping="{StaticResource RotaryFeederMapping}"
                                                     HorizontalAlignment="Center" />
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="Diverter"
                                               FontSize="{DynamicResource FontSize_Label}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10" />
                                    <pc:Diverter Width="150" Height="80" 
                                                 StructVariableName="MechanicalEquipmentOne" 
                                                 StateBrushes="{StaticResource ProcessControlStates}"
                                                 Mapping="{StaticResource DiverterMapping}"
                                                 HorizontalAlignment="Center" />
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="Stirrer"
                                               FontSize="{DynamicResource FontSize_Label}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10" />
                                    <pc:Stirer Width="150" Height="80" 
                                               StructVariableName="MechanicalEquipmentOne" 
                                               StateBrushes="{StaticResource ProcessControlStates}"
                                               Mapping="{StaticResource StirerMapping}"
                                               HorizontalAlignment="Center" />
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="Centrifugal"
                                               FontSize="{DynamicResource FontSize_Label}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10" />
                                    <pc:Centrifugal Width="150" Height="80" 
                                                    StructVariableName="MechanicalEquipmentOne" 
                                                    StateBrushes="{StaticResource ProcessControlStates}"
                                                    Mapping="{StaticResource CentrifugalMapping}"
                                                    HorizontalAlignment="Center" />
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="Scale"
                                               FontSize="{DynamicResource FontSize_Label}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10" />
                                    <pc:Scale Width="150" Height="80" 
                                              StructVariableName="MechanicalEquipmentOne" 
                                              StateBrushes="{StaticResource ProcessControlStates}"
                                              Mapping="{StaticResource ScaleMapping}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>

                            </Border>

                        </UniformGrid>

                    </Border>

                </GroupBox>

            </StackPanel>

        </vw:ScrollViewer>

    </Grid> 	
	
</vw:View>