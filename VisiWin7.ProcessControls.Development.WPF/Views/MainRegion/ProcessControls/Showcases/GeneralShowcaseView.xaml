<vw:View
    x:Class="HMI.GeneralShowcaseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vw="http://inosoft.com/visiwin7"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pc="http://inosoft.com/ProcessControls"
    mc:Ignorable="d" MinWidth="1024" MinHeight="588" d:DesignHeight="588">

    <Grid x:Name="LayoutRoot" Background="{DynamicResource ApplicationBackgroundBrush}">

        <pc:Tank StructVariableName="TankOne" StateBrushes="{StaticResource ProcessControlStates}"
                 Mapping="{StaticResource TankMapping}" Height="250"
                 Width="100" Margin="25,66,899,272" ActualValue="75" Orientation="Top" StrokeThickness="2"/>
        <pc:Pump StructVariableName="TankOne" StateBrushes="{StaticResource ProcessControlStates}"
                 Mapping="{StaticResource PumpMapping}" Height="250"
                 Width="100" Margin="412,66,512,272" Orientation="Bottom"/>
        <pc:PistonValve StructVariableName="TankOne" StateBrushes="{StaticResource ProcessControlStates}"
                        Mapping="{StaticResource PistonValveMapping}" Height="100"
                        Width="250" Margin="222,66,702,422" Orientation="Left"/>
        <pc:Burner StructVariableName="TankOne" StateBrushes="{StaticResource ProcessControlStates}"
                   Mapping="{StaticResource BurnerMapping}" Height="100"
                   Width="250" Margin="222,216,702,272" Orientation="Right"/>

    </Grid>

</vw:View>