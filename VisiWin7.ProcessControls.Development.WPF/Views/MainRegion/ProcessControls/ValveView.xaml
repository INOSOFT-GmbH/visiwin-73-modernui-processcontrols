<vw:View x:Class="HMI.ValveView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vw="http://inosoft.com/visiwin7"
    xmlns:pc="http://inosoft.com/ProcessControls"
    xmlns:adapter="clr-namespace:HMI.Adapter"
    mc:Ignorable="d"
    DataContext="{vw:AdapterBinding Type={x:Type adapter:ProcessControlAdapter}}"
    d:DesignWidth="1920" d:DesignHeight="880">

    <vw:View.Resources>

        <Style TargetType="pc:Valve" BasedOn="{StaticResource {x:Type pc:Valve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:PistonValve" BasedOn="{StaticResource {x:Type pc:PistonValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:MotorValve" BasedOn="{StaticResource {x:Type pc:MotorValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:AngleValve" BasedOn="{StaticResource {x:Type pc:AngleValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:ThreeWayValve" BasedOn="{StaticResource {x:Type pc:ThreeWayValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:GlobeValve" BasedOn="{StaticResource {x:Type pc:GlobeValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:FlapValve" BasedOn="{StaticResource {x:Type pc:FlapValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:GateValve" BasedOn="{StaticResource {x:Type pc:GateValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="pc:BallValve" BasedOn="{StaticResource {x:Type pc:BallValve}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFrameTemplateActive}" Value="True">
                    <Setter Property="Template" Value="{StaticResource FrameProcessControlTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </vw:View.Resources>

    <Grid x:Name="LayoutRoot" Background="{DynamicResource ApplicationBackgroundBrush}">

        <vw:ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10"
                         Style="{StaticResource ScrollViewerDefaultStyle}">

            <StackPanel Orientation="Vertical">

                <vw:GroupBox Header="@Views.ProcessControls.ValveTypes" Foreground="{DynamicResource ForegroundDarkBrush}"
                          FontSize="{DynamicResource FontSize_Subheader}"
                          FontWeight="SemiBold"
                          Margin="0,0,0,30">

                    <vw:GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Blue4Brush}"
                                    CornerRadius="3"
                                    Padding="10,5">
                                <vw:TextBlock LocalizableText="{Binding}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource Blue5Brush}" />
                            </Border>
                        </DataTemplate>
                    </vw:GroupBox.HeaderTemplate>

                    <Border Background="{DynamicResource Gray4Brush}"
                            CornerRadius="{DynamicResource CornerRadius}"
                            Padding="0">
                        <UniformGrid Rows="3" Columns="3">

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:Valve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                              StructVariableName="ValveOne" 
                                              StateBrushes="{StaticResource ProcessControlStates}"
                                              Mapping="{StaticResource DefaultMapping}"
                                              HorizontalAlignment="Center" LocalizableLabelText="@Variables.Valve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:PistonValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                    StructVariableName="ValveOne" 
                                                    StateBrushes="{StaticResource ProcessControlStates}"
                                                    Mapping="{StaticResource PistonValveMapping}"
                                                    HorizontalAlignment="Center" LocalizableLabelText="@Variables.PistonValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:MotorValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                   StructVariableName="ValveOne" 
                                                   StateBrushes="{StaticResource ProcessControlStates}"
                                                   Mapping="{StaticResource MotorValveMapping}"
                                                   HorizontalAlignment="Center" LocalizableLabelText="@Variables.MotorValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:AngleValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                   StructVariableName="ValveOne" 
                                                   StateBrushes="{StaticResource ProcessControlStates}"
                                                   Mapping="{StaticResource AngleValveMapping}"
                                                   HorizontalAlignment="Center" LocalizableLabelText="@Variables.AngleValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:ThreeWayValve x:Name="Test" Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                      StructVariableName="ThreeWayValveOne" 
                                                      StateBrushes="{StaticResource ProcessControlStates}"
                                                      Mapping="{StaticResource ThreeWayValveMapping}"
                                                      HorizontalAlignment="Center" LocalizableLabelText="@Variables.ThreeWayValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:GlobeValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                   StructVariableName="ValveOne" 
                                                   StateBrushes="{StaticResource ProcessControlStates}"
                                                   Mapping="{StaticResource GlobeValveMapping}"
                                                   HorizontalAlignment="Center" LocalizableLabelText="@Variables.GlobeValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:FlapValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                  StructVariableName="ValveOne" 
                                                  StateBrushes="{StaticResource ProcessControlStates}"
                                                  Mapping="{StaticResource FlapValveMapping}"
                                                  HorizontalAlignment="Center" LocalizableLabelText="@Variables.FlapValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:GateValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                  StructVariableName="ValveOne" 
                                                  StateBrushes="{StaticResource ProcessControlStates}"
                                                  Mapping="{StaticResource GateValveMapping}"
                                                  HorizontalAlignment="Center" LocalizableLabelText="@Variables.GateValve"/>
                                </StackPanel>

                            </Border>

                            <Border Background="{DynamicResource GrayBrush}"
                                    CornerRadius="{DynamicResource CornerRadius}"
                                    Margin="10"
                                    Padding="15">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      Direction="315"
                                                      Color="Gray"
                                                      Opacity="0.3"
                                                      BlurRadius="8" />
                                </Border.Effect>

                                <StackPanel>
                                    
                                    <pc:BallValve Width="{StaticResource ProcessControlWidth}" Height="{StaticResource ProcessControlHeight}" 
                                                  StructVariableName="ValveOne" 
                                                  StateBrushes="{StaticResource ProcessControlStates}"
                                                  Mapping="{StaticResource BallValveMapping}"
                                                  HorizontalAlignment="Center" LocalizableLabelText="@Variables.BallValve"/>
                                </StackPanel>

                            </Border>

                        </UniformGrid>

                    </Border>

                </vw:GroupBox>

            </StackPanel>

        </vw:ScrollViewer>

    </Grid> 	
    
</vw:View>